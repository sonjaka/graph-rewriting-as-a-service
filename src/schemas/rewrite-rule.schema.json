{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "rewrite-rule.schema.json",
	"title": "Graph Rewriting Rule Schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"key": {
			"type": "string"
		},
		"options": {
			"type": "object",
			"properties": {
				"homomorphic": {
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"lhs": {
			"$ref": "graph.schema.json"
		},
		"rhs": {
			"$ref": "graph.schema.json"
		}
	},
	"required": ["key", "lhs", "rhs"]
}
