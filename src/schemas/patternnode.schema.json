{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "patternnode.schema.json",
	"title": "Pattern Node Schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"key": {
			"description": "The node's ID, also used as node in an edges source/target etc.",
			"type": "string"
		},
		"attributes": {
			"description": "The node's attributes. ",
			"type": "object",
			"properties": {
				"type": {
					"type": "string"
				}
			},
			"patternProperties": {
				"^(?!type$).*": {
					"anyOf": [
						{ "type": "number" },
						{ "type": "string" },
						{ "type": "boolean" },
						{
							"type": "array",
							"items": {
								"anyOf": [
									{ "type": "number" },
									{ "type": "string" },
									{ "type": "boolean" }
								]
							}
						}
					]
				}
			}
		}
	},
	"required": ["key", "attributes"]
}
