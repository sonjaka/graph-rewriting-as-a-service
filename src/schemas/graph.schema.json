{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://grs.com/schemas/graph",
	"title": "Graph Schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"attributes": {
			"type": "object",
			"additionalProperties": true
		},
		"options": {
			"type": "object",
			"properties": {
				"type": {
					"description": "One of mixed, directed or undirected",
					"enum": ["mixed", "directed", "undirected"]
				},
				"allowSelfLoops": {
					"type": "boolean"
				},
				"multi": {
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"nodes": {
			"type": "array",
			"items": {
				"$ref": "https://grs.com/schemas/node"
			}
		},
		"edges": {
			"type": "array",
			"items": {
				"$ref": "https://grs.com/schemas/edge"
			}
		}
	},
	"required": ["options", "nodes", "edges"]
}
