{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "graph.schema.json",
	"title": "Graph Schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"attributes": {
			"type": "object",
			"additionalProperties": true
		},
		"options": {
			"type": "object",
			"properties": {
				"type": {
					"description": "One of mixed, directed or undirected",
					"enum": ["mixed", "directed", "undirected"]
				},
				"allowSelfLoops": {
					"type": "boolean"
				},
				"multi": {
					"type": "boolean"
				}
			},
			"required": ["type"],
			"additionalProperties": false
		},
		"nodes": {
			"type": "array",
			"items": {
				"$ref": "node.schema.json"
			}
		},
		"edges": {
			"type": "array",
			"items": {
				"$ref": "edge.schema.json"
			}
		}
	},
	"required": ["options", "attributes", "nodes", "edges"]
}
