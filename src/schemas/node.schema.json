{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "node.schema.json",
	"title": "Graph Node Schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"key": {
			"description": "The node's ID, also used as node in an edges source/target etc.",
			"type": "string"
		},
		"attributes": {
			"description": "The node's attributes. ",
			"type": "object",
			"properties": {
				"type": {
					"description": "If given, the type will be used as a Neo4j Node label. Allows for easier debugging.",
					"type": "string"
				}
			},
			"patternProperties": {
				"^(?!type$).*": {
					"oneOf": [
						{ "type": "number" },
						{ "type": "string" },
						{ "type": "boolean" }
					]
				}
			}
		}
	},
	"required": ["key", "attributes"]
}
