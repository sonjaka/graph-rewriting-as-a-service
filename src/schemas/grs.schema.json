{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "grs.schema.json",
	"title": "Graph Rewriting Request Schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"hostgraph": {
			"$ref": "graph.schema.json"
		},
		"rules": {
			"type": "array",
			"items": {
				"$ref": "rewrite-rule.schema.json"
			}
		},
		"run": {
			"type": "array",
			"items": {
				"$ref": "run-config.schema.json"
			}
		}
	},
	"required": ["hostgraph"]
}
