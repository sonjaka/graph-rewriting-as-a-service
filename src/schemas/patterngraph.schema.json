{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "patterngraph.schema.json",
	"title": "Patterngraph Schema",
	"type": "object",
	"properties": {
		"options": {
			"type": "object",
			"properties": {
				"type": {
					"description": "One of directed or undirected",
					"enum": ["directed", "undirected"]
				},
				"allowSelfLoops": {
					"type": "boolean"
				},
				"multi": {
					"type": "boolean"
				}
			},
			"required": ["type"],
			"additionalProperties": false
		},
		"nodes": {
			"type": "array",
			"items": {
				"$ref": "patternnode.schema.json"
			}
		},
		"edges": {
			"type": "array",
			"items": {
				"$ref": "edge.schema.json"
			}
		},
		"nacs": {
			"type": "object",
			"properties": {
				"nodes": {
					"type": "array",
					"items": {
						"$ref": "patternnode.schema.json"
					}
				},
				"edges": {
					"type": "array",
					"items": {
						"$ref": "edge.schema.json"
					}
				}
			}
		}
	},
	"required": ["options", "nodes", "edges"]
}
