{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "patterngraph.schema.json",
	"title": "Pattern Graph Schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"options": {
			"type": "object",
			"properties": {
				"type": {
					"description": "Type of the graph: either directed or undirected",
					"enum": ["directed", "undirected"]
				}
			},
			"required": ["type"],
			"additionalProperties": false
		},
		"nodes": {
			"type": "array",
			"items": {
				"$ref": "patternnode.schema.json"
			}
		},
		"edges": {
			"type": "array",
			"items": {
				"$ref": "edge.schema.json"
			}
		},
		"nacs": {
			"type": "array",
			"items": {
				"$ref": "#/$defs/nacSchema"
			}
		}
	},
	"required": ["options", "nodes", "edges"],
	"$defs": {
		"nacSchema": {
			"type": "object",
			"properties": {
				"nodes": {
					"type": "array",
					"items": {
						"$ref": "patternnode.schema.json"
					}
				},
				"edges": {
					"type": "array",
					"items": {
						"$ref": "edge.schema.json"
					}
				}
			},
			"required": ["nodes", "edges"],
			"additionalProperties": false
		}
	}
}
